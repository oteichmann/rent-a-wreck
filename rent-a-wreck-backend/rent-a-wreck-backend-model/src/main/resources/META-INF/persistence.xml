<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="1.0">
	<persistence-unit name="rent-a-wreck">
		<jta-data-source>java:jboss/datasources/ExampleDS</jta-data-source>
		<class>com.prodyna.pac.rentawreck.backend.model.Aircraft</class>
		<class>com.prodyna.pac.rentawreck.backend.model.Rentable</class>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<!-- Show and print nice SQL on stdout -->
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<!-- Drop and create a new DB each time - Use only on development -->
			<property name="hibernate.hbm2ddl.auto" value="create" />
		</properties>
	</persistence-unit>
</persistence>
